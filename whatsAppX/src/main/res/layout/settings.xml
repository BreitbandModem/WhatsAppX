<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="25dp"
        android:orientation="vertical" >
        
        <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:text="Select which icons will be shown in the actionbar of a conversation"
        android:paddingBottom="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="5"
                android:orientation="horizontal"
                android:rowCount="2" >

                <ImageView
                    android:id="@+id/imageViewGear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:src="@drawable/ic_settings" />

                <ImageView
                    android:id="@+id/imageViewLock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:src="@drawable/ic_locked" />

                <ImageView
                    android:id="@+id/imageViewReminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:src="@drawable/ic_reminder" />

                <ImageView
                    android:id="@+id/imageViewStar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="3"
                    android:layout_row="0"
                    android:src="@drawable/ic_star_white" />
                
                <ImageView
                    android:id="@+id/imageViewPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="4"
                    android:layout_row="0"
                    android:src="@drawable/ic_audio_phone_am" />

                <CheckBox
                    android:id="@+id/switchGear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:paddingRight="15dp" />

                <CheckBox
                    android:id="@+id/switchLock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:paddingRight="15dp" />

                <CheckBox
                    android:id="@+id/switchReminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:paddingRight="15dp" />

                <CheckBox
                    android:id="@+id/switchStar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="3"
                    android:layout_row="1" 
                    android:paddingRight="15dp" />
                
                <CheckBox
                    android:id="@+id/switchPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="4"
                    android:layout_row="1" />
            </GridLayout>

            <Button
                android:id="@+id/buttonColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="Color" />

        </RelativeLayout>

        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="23" />
        
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:background="@android:color/darker_gray" />
        
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change the functionality of the stock call button (the one next to the paper clip)"
            android:paddingBottom="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <RadioGroup
        android:id="@+id/radioMenuPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
            
	        <RadioButton
	                    android:id="@+id/radioMenuPhone1"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="Change nothing"/>
	        
	        <RadioButton
	                    android:id="@+id/radioMenuPhone2"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="Hide icon"/>
	        
	        <RadioButton
	                    android:id="@+id/radioMenuPhone3"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="Call over cell (non-whatsapp-call)"/>
	    </RadioGroup>
        
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:background="@android:color/darker_gray" />

         <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Highlight group chats in the chat overview"
            android:paddingBottom="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />
         
         <Switch
            android:id="@+id/switchGroupHighlight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:text="Enabled" />
         
         <Button
                android:id="@+id/buttonGroupHighlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="Set Color" />
        
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:background="@android:color/darker_gray" />
        
        <Switch
            android:id="@+id/switchSelfie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Favorite icon instead of selfie button" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Requires restart of WhatsApp"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What should the dropdown menu show on long click of a message"
            android:paddingBottom="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Switch
            android:id="@+id/switchFavorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:text="Add message to Favorites" />

        <Switch
            android:id="@+id/switchClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="All other options" />
        
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:background="@android:color/darker_gray" />
        
        <Switch
            android:id="@+id/switchKeyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:text="Force Keyboard to show enter key" />
        
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:background="@android:color/darker_gray" />
        
        <Switch
            android:id="@+id/switchStealth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:text="Hide pattern trail" />
        
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:background="@android:color/darker_gray" />
        
        <Switch
            android:id="@+id/switchTicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Show notification message in ticker" />
        
        <!-- <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set a replacement text for hidden notifications"
            android:paddingBottom="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
